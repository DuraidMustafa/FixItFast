generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Challenge {
  id         String   @id @default(cuid())
  title      String
  slug       String   @unique
  template   String
  difficulty String
  files      Json
  test       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Room {
  id           String   @id @default(cuid())
  players      String[]
  requirements Json
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
